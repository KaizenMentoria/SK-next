@model IEnumerable<Aluno>
@{
    ViewData["Title"] = "Index";
}

<h2>Index - Aluno</h2>

@if (Model.Count() > 0)
{
    <table class="table table-dark table-hover">
    <thead>
        <tr>
            <th><label asp-for="First() .PrimeiroNome"></label></th>
            <th><label asp-for="First() .SegundoNome"></label></th>
            <th><label asp-for="First() .Sobrenome"></label></th>
            <th>Details (tag helper)</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => aluno.PrimeiroNome)</td>
                    <td>@Html.DisplayFor(m => aluno.SegundoNome)</td>
                    <td>@Html.DisplayFor(m => aluno.Sobrenome)</td>
                    <td><a asp-action="ShowDetails" asp-route-id="@aluno.AlunoId">Details</a></td>
                    <td><a asp-action="Edit" asp-route-id="@aluno.AlunoId">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@aluno.AlunoId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Não Há Alunos Cadastrados.</h2>

}